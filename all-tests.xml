<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
  
<suite name="Login Test Suite" verbose="1" parallel="false">
    <parameter name="browserName" value="chrome" />
    <parameter name="mainURL" value="https://www.linkedin.com/" />

  <test name="Login Tests" >
    <classes>
        <class name="test.LinkedinLoginTest" />
    </classes>
  </test>
  <test name="Search Tests" >
    <classes>
      <class name="test.LinkedinSearchTest" />
    </classes>
  </test>
  <test name="Change Password Tests" >
    <classes>
      <class name="test.LinkedinResetPasswordTest" />
    </classes>
  </test>
</suite>
